<header>
  <h1>CAN YOU SMELL WHAT THESE FLASHCARDS ARE COOKING?</h1>
</header>

<% unless logged_in? %>
<section>
  <form method='post' action='/users/login'>
    <label for="user">Username:</label>
    <input id="user" name="username" type='text'>
    <label for="pass">Password</label>
    <input id="pass" name="password" type='password'>
    <input type="submit" value="Get in the ring, ya jabroni">
  </form>
<% end %>

  <% if @errors %>
    <% @errors.each do |error| %>
      <p><%= "#{error}" %></p>
    <% end %>
  <% end %>

</section>

<% if logged_in? %>

  <h2>WELCOME <%= current_user.username %> </h2>
  <p>You can <a href="/users/<%= current_user.id %>">jump into the ring</a> or <a href="/logout">log out like a chump</a>.
<% end %>

<% unless logged_in? %>
<section>
  <p>New? Register <a href='/users/new'>by clicking here</a>.</p>
</section>
<% end %>
